<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css">
<link rel="stylesheet" href="/css/auth.css">
</head>

<body>
   <%- include('../includes/nevigation.ejs') %>

    <main>
        <% if(errmessage){ %>
            <div  class="user-message user-message--error"><%= errmessage %></div>
        <% } %>
        <form class="login-form" action="/login" method="POST" novalidate>
            <div class="form-control">
                <label for="Email">Email</label>
                <input 
                class="<%= validationerror.find(e=> e.param ==='email') ? 'invalid' : ''  %>"
                type="email" name="email" id="email" value="<%= oldInput.email %>">               
            </div>
            <div class="form-control">
                <label for="Password">Password</label>
                <input 
                class="<%= validationerror.find(e=> e.param ==='password') ? 'invalid' : ''  %>"
                type="password" name="password" id="password" value="<%= oldInput.password %>">               
            </div>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button class="btn" type="submit">Login</button>
        </form>
        <form>
            <a class="btn" href="/reset" >Reset Password</a>
        </form>
    </main>
<%- include('../includes/end.ejs') %></main>